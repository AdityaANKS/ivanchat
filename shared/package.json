{
  "name": "@ivanchat/shared",
  "version": "1.0.0",
  "description": "Shared types, constants, and utilities for IvanChat application",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc --module commonjs --outDir dist --declaration false",
    "build:esm": "tsc --module esnext --outDir dist/esm --declaration false",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "joi": "^17.10.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "dayjs": "^1.11.10",
    "uuid": "^9.0.1",
    "lodash": "^4.17.21",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.4",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.8.0",
    "@types/uuid": "^9.0.5",
    "@types/validator": "^13.11.3",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ivanchat/ivanchat.git",
    "directory": "shared"
  },
  "keywords": [
    "ivanchat",
    "shared",
    "types",
    "constants",
    "utilities"
  ],
  "author": "IvanChat Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}