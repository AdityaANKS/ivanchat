{
  "version": "1.0.0",
  "lastUpdated": "2024-01-01",
  "policies": {
    "authentication": {
      "passwordPolicy": {
        "minLength": 8,
        "maxLength": 128,
        "requireUppercase": true,
        "requireLowercase": true,
        "requireNumbers": true,
        "requireSpecialChars": true,
        "preventCommonPasswords": true,
        "preventUserInfo": true,
        "passwordHistory": 5,
        "expirationDays": 90
      },
      "sessionPolicy": {
        "sessionTimeout": 3600000,
        "absoluteTimeout": 86400000,
        "renewalThreshold": 300000,
        "maxConcurrentSessions": 3,
        "requireReauthentication": ["payment", "passwordChange", "deleteAccount"]
      },
      "mfaPolicy": {
        "required": false,
        "methods": ["totp", "sms", "email", "biometric"],
        "backupCodes": 10,
        "gracePeriodDays": 7
      },
      "lockoutPolicy": {
        "maxAttempts": 5,
        "lockoutDuration": 900000,
        "resetAfter": 3600000,
        "incrementalDelay": true
      }
    },
    "encryption": {
      "dataAtRest": {
        "algorithm": "AES-256-GCM",
        "keyRotationDays": 90,
        "keyDerivation": "PBKDF2",
        "iterations": 100000
      },
      "dataInTransit": {
        "tlsVersion": "1.3",
        "cipherSuites": [
          "TLS_AES_256_GCM_SHA384",
          "TLS_CHACHA20_POLY1305_SHA256",
          "TLS_AES_128_GCM_SHA256"
        ],
        "requireEncryption": true,
        "hsts": {
          "enabled": true,
          "maxAge": 31536000,
          "includeSubDomains": true,
          "preload": true
        }
      },
      "keyManagement": {
        "keyStorage": "HSM",
        "keyEscrow": false,
        "splitKnowledge": true,
        "dualControl": true
      }
    },
    "accessControl": {
      "rbac": {
        "enabled": true,
        "roles": ["admin", "moderator", "user", "guest"],
        "defaultRole": "user",
        "inheritance": true
      },
      "permissions": {
        "granularity": "resource",
        "delegation": false,
        "temporaryAccess": true,
        "auditRequired": true
      },
      "apiAccess": {
        "requireAuthentication": true,
        "apiKeyRotation": 30,
        "ipWhitelist": [],
        "rateLimit": {
          "authenticated": 1000,
          "unauthenticated": 100
        }
      }
    },
    "dataProtection": {
      "classification": {
        "levels": ["public", "internal", "confidential", "restricted"],
        "defaultLevel": "internal",
        "labelingRequired": true
      },
      "retention": {
        "defaultDays": 365,
        "minimumDays": 30,
        "legalHoldSupported": true,
        "deletionVerification": true
      },
      "privacy": {
        "gdprCompliant": true,
        "ccpaCompliant": true,
        "anonymization": true,
        "rightToErasure": true,
        "dataPortability": true
      },
      "backup": {
        "frequency": "daily",
        "retention": 30,
        "encryption": true,
        "offsite": true,
        "tested": "quarterly"
      }
    },
    "monitoring": {
      "logging": {
        "level": "info",
        "retention": 90,
        "centralized": true,
        "encrypted": true,
        "tamperProof": true
      },
      "alerting": {
        "channels": ["email", "sms", "slack"],
        "severity": ["critical", "high", "medium", "low"],
        "escalation": true,
        "deduplication": true
      },
      "metrics": {
        "collection": true,
        "retention": 365,
        "dashboards": true,
        "realtime": true
      },
      "audit": {
        "enabled": true,
        "events": ["login", "logout", "dataAccess", "configChange", "privilegedAction"],
        "immutable": true,
        "searchable": true
      }
    },
    "incidentResponse": {
      "team": {
        "defined": true,
        "trained": true,
        "available": "24/7",
        "externalSupport": true
      },
      "procedures": {
        "documented": true,
        "tested": "quarterly",
        "updated": "annually",
        "automated": ["detection", "containment", "notification"]
      },
      "communication": {
        "internal": true,
        "external": true,
        "regulatory": true,
        "timeline": {
          "initial": 3600000,
          "detailed": 86400000,
          "final": 604800000
        }
      }
    },
    "compliance": {
      "standards": ["ISO27001", "SOC2", "PCI-DSS", "HIPAA"],
      "assessments": {
        "frequency": "annual",
        "scope": "full",
        "thirdParty": true,
        "penetrationTesting": "biannual"
      },
      "training": {
        "required": true,
        "frequency": "annual",
        "topics": ["security", "privacy", "compliance"],
        "tracking": true
      }
    },
    "vendorManagement": {
      "assessment": {
        "required": true,
        "frequency": "annual",
        "criteria": ["security", "privacy", "compliance", "performance"]
      },
      "contracts": {
        "slaRequired": true,
        "liabilityClause": true,
        "auditRights": true,
        "dataOwnership": "customer"
      }
    },
    "networkSecurity": {
      "firewall": {
        "enabled": true,
        "defaultDeny": true,
        "logging": true,
        "ids": true,
        "ips": true
      },
      "segmentation": {
        "enabled": true,
        "zones": ["dmz", "internal", "restricted"],
        "microSegmentation": true
      },
      "vpn": {
        "required": ["remote", "admin"],
        "protocol": "OpenVPN",
        "mfaRequired": true
      }
    },
    "applicationSecurity": {
      "development": {
        "secureCoding": true,
        "codeReview": true,
        "staticAnalysis": true,
        "dynamicAnalysis": true,
        "dependencyScanning": true
      },
      "deployment": {
        "staging": true,
        "canary": true,
        "rollback": true,
        "signing": true
      },
      "runtime": {
        "waf": true,
        "rasp": true,
        "containerSecurity": true,
        "secretsManagement": true
      }
    }
  },
  "exceptions": {
    "process": "documented",
    "approval": "required",
    "duration": "limited",
    "review": "periodic"
  }
}