# Application
VITE_APP_NAME=Ivan Chat
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production

# API Configuration
VITE_API_BASE_URL=https://api.ivanchat.com/api
VITE_WEBSOCKET_URL=wss://api.ivanchat.com

# Authentication
VITE_AUTH_TOKEN_KEY=ivan_auth_token_prod
VITE_AUTH_REFRESH_TOKEN_KEY=ivan_refresh_token_prod
VITE_SESSION_TIMEOUT=7200000

# OAuth Providers
VITE_GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}
VITE_GITHUB_CLIENT_ID=${GITHUB_CLIENT_ID}
VITE_DISCORD_CLIENT_ID=${DISCORD_CLIENT_ID}

# WebRTC Configuration
VITE_STUN_SERVER=stun:stun.ivanchat.com:19302
VITE_TURN_SERVER=turn:turn.ivanchat.com:3478
VITE_TURN_USERNAME=${TURN_USERNAME}
VITE_TURN_PASSWORD=${TURN_PASSWORD}

# File Upload
VITE_MAX_FILE_SIZE=52428800
VITE_ALLOWED_FILE_TYPES=image/*,video/*,audio/*,.pdf,.doc,.docx,.txt,.zip,.xls,.xlsx,.ppt,.pptx
VITE_UPLOAD_URL=https://api.ivanchat.com/api/upload

# Features Toggles
VITE_ENABLE_VOICE_CHAT=true
VITE_ENABLE_VIDEO_CHAT=true
VITE_ENABLE_SCREEN_SHARE=true
VITE_ENABLE_FILE_SHARING=true
VITE_ENABLE_ENCRYPTION=true
VITE_ENABLE_TRANSLATION=true
VITE_ENABLE_MARKETPLACE=true
VITE_ENABLE_GAMIFICATION=true
VITE_ENABLE_DISCOVERY=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=false

# Third-party Services
VITE_SENTRY_DSN=${SENTRY_DSN}
VITE_MIXPANEL_TOKEN=${MIXPANEL_TOKEN}
VITE_GOOGLE_ANALYTICS_ID=${GOOGLE_ANALYTICS_ID}
VITE_STRIPE_PUBLIC_KEY=${STRIPE_PUBLIC_KEY}
VITE_CLOUDINARY_CLOUD_NAME=${CLOUDINARY_CLOUD_NAME}
VITE_CLOUDINARY_UPLOAD_PRESET=${CLOUDINARY_UPLOAD_PRESET}

# Translation Service
VITE_TRANSLATION_API_KEY=${TRANSLATION_API_KEY}
VITE_TRANSLATION_API_URL=https://translation.googleapis.com/language/translate/v2
VITE_DEFAULT_LANGUAGE=en

# Maps (for location sharing)
VITE_MAPBOX_TOKEN=${MAPBOX_TOKEN}
VITE_GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}

# Push Notifications
VITE_VAPID_PUBLIC_KEY=${VAPID_PUBLIC_KEY}

# Rate Limiting
VITE_MESSAGE_RATE_LIMIT=30
VITE_API_RATE_LIMIT=60

# Cache Configuration
VITE_CACHE_TTL=7200000
VITE_ENABLE_CACHE=true

# Security
VITE_ENCRYPTION_KEY=${ENCRYPTION_KEY}
VITE_CSP_REPORT_URI=https://api.ivanchat.com/api/csp-report
VITE_ENABLE_CSP=true

# Development Tools
VITE_ENABLE_MOCK_API=false
VITE_MOCK_API_DELAY=0
VITE_ENABLE_SERVICE_WORKER=true

# CDN Configuration
VITE_CDN_URL=https://cdn.ivanchat.com
VITE_STATIC_ASSETS_URL=https://static.ivanchat.com

# Performance
VITE_ENABLE_PWA=true
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_LAZY_LOADING=true