      "label": "Ivan Desktop - Voice and Video Calls"
    },
    {
      "src": "/screenshots/mobile-1.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "platform": "narrow",
      "label": "Ivan Mobile - Chat View"
    },
    {
      "src": "/screenshots/mobile-2.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "platform": "narrow",
      "label": "Ivan Mobile - Server List"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Direct Messages",
      "short_name": "DMs",
      "description": "Open direct messages",
      "url": "/channels/@me",
      "icons": [
        {
          "src": "/shortcuts/dm-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Create Server",
      "short_name": "New Server",
      "description": "Create a new server",
      "url": "/servers/create",
      "icons": [
        {
          "src": "/shortcuts/create-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Explore",
      "short_name": "Explore",
      "description": "Discover public servers",
      "url": "/explore",
      "icons": [
        {
          "src": "/shortcuts/explore-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "media",
          "accept": [
            "image/*",
            "video/*",
            "audio/*",
            "application/pdf",
            "text/*"
          ]
        }
      ]
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+ivan",
      "url": "/protocol?url=%s"
    }
  ],
  
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.ivan.app",
      "id": "com.ivan.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/ivan/id123456789"
    },
    {
      "platform": "windows",
      "url": "https://www.microsoft.com/store/apps/ivan"
    }
  ],
  
  "prefer_related_applications": false,
  
  "permissions": [
    "notifications",
    "microphone",
    "camera",
    "geolocation",
    "clipboard-read",
    "clipboard-write"
  ],
  
  "features": [
    "screen-wake-lock",
    "idle-detection",
    "web-share",
    "contacts",
    "periodic-background-sync"
  ],
  
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  
  "handle_links": "preferred",
  
  "launch_handler": {
    "client_mode": ["focus-existing", "auto"]
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "image/*": [".png", ".jpg", ".jpeg", ".gif", ".webp", ".svg"],
        "video/*": [".mp4", ".webm", ".mov"],
        "audio/*": [".mp3", ".wav", ".ogg", ".m4a"],
        "text/*": [".txt", ".md", ".json", ".js", ".html", ".css"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  
  "capture_links": "existing_client_event",
  
  "url_handlers": [
    {
      "origin": "https://ivan.chat"
    },
    {
      "origin": "https://app.ivan.chat"
    }
  ],
  
  "widgets": [
    {
      "name": "Quick Chat",
      "description": "Quick access to recent chats",
      "tag": "quick-chat",
      "template": "quick-chat-template",
      "type": "text/html",
      "sizes": "400x400",
      "screenshots": [
        {
          "src": "/widgets/quick-chat.png",
          "sizes": "400x400",
          "label": "Quick chat widget"
        }
      ]
    }
  ]
}