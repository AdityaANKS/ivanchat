# Application
VITE_APP_NAME=Ivan Chat
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_WEBSOCKET_URL=ws://localhost:5000

# Authentication
VITE_AUTH_TOKEN_KEY=ivan_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=ivan_refresh_token
VITE_SESSION_TIMEOUT=3600000

# OAuth Providers
VITE_GOOGLE_CLIENT_ID=your-google-client-id-here
VITE_GITHUB_CLIENT_ID=your-github-client-id-here
VITE_DISCORD_CLIENT_ID=your-discord-client-id-here

# WebRTC Configuration
VITE_STUN_SERVER=stun:stun.l.google.com:19302
VITE_TURN_SERVER=turn:your-turn-server.com:3478
VITE_TURN_USERNAME=username
VITE_TURN_PASSWORD=password

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/*,video/*,audio/*,.pdf,.doc,.docx,.txt,.zip
VITE_UPLOAD_URL=http://localhost:5000/api/upload

# Features Toggles
VITE_ENABLE_VOICE_CHAT=true
VITE_ENABLE_VIDEO_CHAT=true
VITE_ENABLE_SCREEN_SHARE=true
VITE_ENABLE_FILE_SHARING=true
VITE_ENABLE_ENCRYPTION=true
VITE_ENABLE_TRANSLATION=true
VITE_ENABLE_MARKETPLACE=true
VITE_ENABLE_GAMIFICATION=true
VITE_ENABLE_DISCOVERY=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true

# Third-party Services
VITE_SENTRY_DSN=
VITE_MIXPANEL_TOKEN=
VITE_GOOGLE_ANALYTICS_ID=
VITE_STRIPE_PUBLIC_KEY=
VITE_CLOUDINARY_CLOUD_NAME=
VITE_CLOUDINARY_UPLOAD_PRESET=

# Translation Service
VITE_TRANSLATION_API_KEY=
VITE_TRANSLATION_API_URL=https://translation.googleapis.com/language/translate/v2
VITE_DEFAULT_LANGUAGE=en

# Maps (for location sharing)
VITE_MAPBOX_TOKEN=
VITE_GOOGLE_MAPS_API_KEY=

# Push Notifications
VITE_VAPID_PUBLIC_KEY=

# Rate Limiting
VITE_MESSAGE_RATE_LIMIT=60
VITE_API_RATE_LIMIT=100

# Cache Configuration
VITE_CACHE_TTL=3600000
VITE_ENABLE_CACHE=true

# Security
VITE_ENCRYPTION_KEY=
VITE_CSP_REPORT_URI=
VITE_ENABLE_CSP=true

# Development Tools
VITE_ENABLE_MOCK_API=false
VITE_MOCK_API_DELAY=500
VITE_ENABLE_SERVICE_WORKER=false